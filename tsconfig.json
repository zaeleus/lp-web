{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,

    "rootDir": "src",
    "outDir": "build/dist",

    "jsx": "react",

    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,

    // https://github.com/apollographql/apollo-client/issues/2503
    "skipLibCheck": true
  }
}
