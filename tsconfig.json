{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,

    "rootDir": "src",
    "outDir": "build/dist",

    "jsx": "react",

    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "src/setupTests.ts",
    "src/**/*.test.ts*"
  ]
}
